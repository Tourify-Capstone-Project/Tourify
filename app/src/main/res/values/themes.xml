<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Tourify." parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Background</item>
        <item name="colorPrimaryVariant">@color/Blue_purple</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/Blue_purple</item>
        <item name="colorOnSecondary">@color/Background</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Tourify" parent="Base.Theme.Tourify." />

    <style name="TextTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/montserratalternates_semibold</item>
    </style>

    <style name="TextTitle.Price">
        <item name="android:fontFamily">@font/montserratalternates_regular</item>
    </style>

    <style name="TextTitle.Homepage">
        <item name="android:fontFamily">@font/montserratalternates_bold</item>
    </style>

    <style name="TextTitle.Description">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/montserratalternates_regular</item>
    </style>

    <style name="TextTitle.Detail">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/montserratalternates_semibold</item>
    </style>

    <style name="TextTitle.Rating">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/montserratalternates_medium</item>
    </style>

    <style name="TextTitle.AppBar">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/montserratalternates_bold</item>
    </style>

    <style name="TextTitle.Search">
        <item name="android:textColor">@color/Grey</item>
    </style>

    <style name="TextCard">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextCard.RecommendationTitle">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/montserratalternates_medium</item>
    </style>

    <style name="TextCard.ArticleTitle">
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/montserratalternates_semibold</item>
    </style>

    <style name="TextCard.Description">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/montserratalternates_regular</item>
    </style>

    <style name="TextCard.Category">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/montserratalternates_medium</item>
    </style>

    <style name="TextCard.Favorite">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserratalternates_semibold</item>
    </style>

    <style name="Card">
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="Search">
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="AppBar">
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="icon">
        <item name="tint">@color/black</item>
    </style>

    <style name="CustomButtonStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/montserratalternates_semibold</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>