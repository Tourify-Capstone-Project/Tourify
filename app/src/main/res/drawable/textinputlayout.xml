<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Layer untuk stroke luar -->
    <item>
        <shape>
            <solid android:color="@android:color/transparent" />
            <corners android:radius="16dp" />
            <stroke
                android:width="3dp"
                android:color="@android:color/darker_gray" /> <!-- Warna dan lebar stroke luar -->
        </shape>
    </item>

    <!-- Layer untuk stroke dalam -->
    <item
        android:bottom="1dp"
        android:left="0dp"
        android:right="1dp"
        android:top="0dp">
        <shape>
            <corners android:radius="20dp" /> <!-- Radius lebih kecil untuk menyesuaikan dengan stroke luar -->
            <stroke
                android:width="1dp"
                android:color="@color/Grey" /> <!-- Warna dan lebar stroke dalam -->
        </shape>
    </item>
</layer-list>